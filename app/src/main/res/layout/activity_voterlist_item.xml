<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/listitemVoter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.7">

            <TextView
                android:id="@+id/partworkerName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:text="sdfsdfs"
                android:textColor="#000"
                android:textSize="30px" />

            <TextView
                android:id="@+id/mobileNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/partworkerName"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:singleLine="true"
                android:text="dffsddgdf"
                android:textColor="#000"
                android:textSize="30px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".3"
            android:gravity="center">

            <ImageView
                android:id="@+id/taskImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_listitem" />

            <ImageView
                android:id="@+id/taskImage1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_done"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/taskImage2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cross"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
