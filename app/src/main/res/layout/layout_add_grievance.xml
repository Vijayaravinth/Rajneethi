<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/custom_border"
            android:hint="@string/title"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="@dimen/dp10"
            android:textColor="@color/primary" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/custom_border"
            android:hint="@string/name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="@dimen/dp10"
            android:textColor="@color/primary" />

        <EditText
            android:id="@+id/edtVoter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/custom_border"
            android:hint="@string/voter"

            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="@dimen/dp10"
            android:textColor="@color/primary" />

        <EditText
            android:id="@+id/edtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/custom_border"
            android:hint="@string/date"
            android:imeOptions="actionNext"
            android:inputType="date"
            android:padding="@dimen/dp10"
            android:focusable="false"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/txtType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:textColor="@color/primary"
            android:text="@string/typeb"
            android:visibility="gone" />
        <Spinner
            android:id="@+id/typeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10" />
        <TextView
            android:id="@+id/txtSubType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:textColor="@color/primary"
            android:text="@string/typeb"
            android:visibility="gone" />
        <Spinner
            android:id="@+id/subTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10" />

        <EditText
            android:id="@+id/edtRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/custom_border"
            android:hint="@string/remarks"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="@dimen/dp10"
            android:textColor="@color/primary" />
        <TextView
            android:id="@+id/txtPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:textColor="@color/primary"
            android:text="@string/typeb"
            android:visibility="gone" />
        <Spinner
            android:id="@+id/prioritySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10" />

        <EditText
            android:id="@+id/edtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/custom_border"
            android:hint="@string/slatime"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="@dimen/dp10"
            android:focusable="false"
            android:textColor="@color/primary" />
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:textColor="@color/primary"
            android:text="@string/typeb"
            android:visibility="gone" />
        <Spinner
            android:id="@+id/statusSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10" />

        <EditText
            android:id="@+id/edtRewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/custom_border"
            android:hint="@string/rewards"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="@dimen/dp10"
            android:textColor="@color/primary" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:background="@color/primary"
            android:padding="@dimen/dp5"
            android:id="@+id/btnSubmit"
            android:layout_gravity="center"
            android:text="@string/submit"
            android:textColor="@color/icons" />
    </LinearLayout>

</ScrollView>