<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_card_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp8"
    app:cardCornerRadius="@dimen/dp5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <LinearLayout
            android:id="@+id/details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/icons"
            android:baselineAligned="false"

            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/genderLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:padding="@dimen/dp10"

                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="130dp">

                <ImageView
                    android:id="@+id/adapter_gender_image"
                    android:layout_width="@dimen/dp70"
                    android:layout_height="@dimen/dp70"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/male"
                    android:tint="@color/icons" />

                <TextView
                    android:id="@+id/adapter_txt_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:text="50"
                    android:textColor="@color/icons"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp5"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/adapter_txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="NAME"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/adapter_txt_voter_card_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="VOTER number" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="25dp"
                        android:background="@color/primary_text" />

                    <TextView
                        android:id="@+id/adapter_txt_serial_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="serail number" />
                </LinearLayout>


                <TextView
                    android:id="@+id/adapter_txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Address" />

                <TextView
                    android:id="@+id/adapter_txt_relation_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Address" />

                <TextView
                    android:id="@+id/adapter_txt_booth_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5" />

            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:id="@+id/view"
               />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_survey_done"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/survey_done"
            android:visibility="gone" />



        <ImageView
            android:id="@+id/imgSms"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp5"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_sms_white_24dp"
            android:tint="@color/primaryDark" />

        <ImageView
            android:id="@+id/imgFamily"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imgSms"
            android:layout_margin="@dimen/dp5"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/baseline_group_white_18"
            android:tint="@color/primaryDark" />
    </RelativeLayout>
</android.support.v7.widget.CardView>