<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/dp10"
    app:cardElevation="@dimen/dp5"
    app:cardBackgroundColor="@color/green1"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:text="@string/pleaseSelectOne"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/sp24"
        android:visibility="gone"
        android:background="@drawable/cardview_background"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="@color/divider" />


    <TextView
        android:id="@+id/txtFundManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:text="@string/fundManagement"
        android:textColor="@color/primary_text"
        android:background="@drawable/cardview_background"

        android:textSize="@dimen/sp18"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />


    <TextView
        android:id="@+id/txtGrievance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:background="@drawable/cardview_background"

        android:text="@string/grievanceManagement"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/sp18"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />


    <TextView
        android:id="@+id/txtBeneficiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:text="@string/beneficiaryManagement"
        android:textColor="@color/primary_text"
        android:background="@drawable/cardview_background"

        android:textSize="@dimen/sp18"
        android:textStyle="bold" />


</LinearLayout></android.support.v7.widget.CardView>