<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_card_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp8"
    app:cardCornerRadius="@dimen/dp5"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/icons"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/adapter_gender_image"
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    android:padding="@dimen/dp5"
                    android:src="@drawable/male" />

                <TextView
                    android:id="@+id/adapter_txt_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp5"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/adapter_txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/adapter_txt_voter_card_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="25dp"
                        android:background="@color/primary_text" />

                    <TextView
                        android:id="@+id/adapter_txt_serial_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/adapter_txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/adapter_txt_relation_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/adapter_txt_booth_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@+id/details_layout"
            android:weightSum="4"
            android:background="@drawable/side_nav_bar"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/dp5"
                android:id="@+id/imgCall"
                android:src="@drawable/call_image" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="@dimen/dp5"
                android:layout_weight="1"
                android:id="@+id/imgMessage"
                android:contentDescription="@string/app_name"
                android:src="@drawable/messageimage" />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/dp5"
                android:layout_weight="1"
                android:id="@+id/imgVoiceMessage"
                android:src="@drawable/voice" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="@dimen/dp5"
                android:id="@+id/imgShare"
                android:contentDescription="@string/app_name"
                android:layout_weight="1"
                android:src="@drawable/shareimage" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgVote"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp5"
            android:contentDescription="@string/app_name"
            android:src="@drawable/square" />


    </RelativeLayout>
</android.support.v7.widget.CardView>