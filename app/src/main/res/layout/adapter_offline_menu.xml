<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp5"
    app:cardUseCompatPadding="true"

    app:contentPadding="@dimen/dp5">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardview_main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
      >

        <ImageView
            android:id="@+id/menu_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

        <com.software.cb.rajneethi.custmo_widgets.CircularTextView
            android:id="@+id/survey_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:textColor="@color/icons"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_menu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu_image"
            android:layout_centerHorizontal="true"
            android:textColor="@color/primary"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/dp5"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

