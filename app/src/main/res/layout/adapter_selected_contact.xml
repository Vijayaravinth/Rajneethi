<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_cardview"
    android:layout_width="@dimen/dp200"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp5"
    app:cardCornerRadius="@dimen/dp5">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_txt_contact_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_toStartOf="@+id/adapter_image_delete"
            android:layout_toLeftOf="@+id/adapter_image_delete"
            android:maxLines="1"
            android:padding="@dimen/dp5" />

        <TextView
            android:id="@+id/adapter_txt_contact_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adapter_txt_contact_details"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toStartOf="@+id/adapter_image_delete"
            android:layout_toLeftOf="@+id/adapter_image_delete"
            android:padding="@dimen/dp5" />

        <ImageView
            android:id="@+id/adapter_image_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp5"
            android:src="@mipmap/ic_delete_forever_white_24dp"
            android:tint="@color/Color_DarkRed" />

    </RelativeLayout>
</android.support.v7.widget.CardView>