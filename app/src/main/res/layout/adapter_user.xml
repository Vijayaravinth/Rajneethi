<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/icons"
    android:padding="@dimen/dp10"
    android:gravity="center">

    <com.software.cb.rajneethi.custmo_widgets.CircularTextView
        android:id="@+id/circular_text"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="PW"
        android:textColor="@color/icons" />



    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginStart="@dimen/dp5"
        android:layout_toEndOf="@+id/circular_text"
        android:layout_toRightOf="@+id/circular_text"
        android:layout_toStartOf="@+id/img_user_delete"
        android:layout_toLeftOf="@+id/img_user_delete"
        android:gravity="center"

        >

        <TextView
            android:id="@+id/adapter_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp5"
            android:ellipsize="end"
            android:maxLines="1"

            android:text="vijay"
            android:textSize="@dimen/sp18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/adapter_user_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adapter_username"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/dp5"
            android:layout_toStartOf="@+id/txt_survey_count"
            android:layout_toLeftOf="@+id/txt_survey_count"
            android:text="admin" />



        <com.software.cb.rajneethi.custmo_widgets.CircularTextView
            android:id="@+id/txt_survey_count"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="PW"
            android:textColor="@color/icons"
            android:visibility="visible" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/img_user_delete"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/rajneethilogo1"
        />


</RelativeLayout>



